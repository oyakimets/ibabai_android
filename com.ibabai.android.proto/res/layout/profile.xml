<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.ibabai.android.proto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"    
    app:columnCount="2"
    app:orientation="horizontal" >    
    

    <TextView         
    	android:textAppearance="?android:attr/textAppearanceLarge"
    	android:layout_marginTop="20dp"     	    	
    	android:text="E-mail:"
    	android:paddingLeft="20dp" 
    	android:layout_height="60dp" />
    	
    <TextView
        android:id="@+id/pr_email"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_marginTop="20dp"  
        android:paddingRight="20dp"   
        app:layout_gravity="right" /> 
       
    
    <TextView         
    	android:textAppearance="?android:attr/textAppearanceLarge"     	    	
    	android:text="Phone:"
    	android:paddingLeft="20dp" 
    	android:layout_height="60dp"  />
    	
    <TextView
        android:id="@+id/pr_phone"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:paddingRight="20dp"   
        app:layout_gravity="right" />
    
    <TextView         
    	android:textAppearance="?android:attr/textAppearanceLarge"     	    	
    	android:text="Age:" 
    	android:paddingLeft="20dp" 
    	android:layout_height="60dp" />
    	
    <TextView
        android:id="@+id/pr_age"
        android:paddingRight="20dp"  
        android:textAppearance="?android:attr/textAppearanceLarge" 
        app:layout_gravity="right" />
    
    <TextView         
    	android:textAppearance="?android:attr/textAppearanceLarge"     	    	
    	android:text="Gender:"
    	android:paddingLeft="20dp"  
    	android:layout_height="60dp" />
    	
    <TextView
        android:id="@+id/pr_gender"
        android:paddingRight="20dp"  
        android:textAppearance="?android:attr/textAppearanceLarge" 
        app:layout_gravity="right" />
    
    <Button 
        android:id="@+id/change_password"
        android:layout_marginTop = "30dp"
        android:layout_marginLeft="20dp"
        android:text="Change&#10;password"         
        android:layout_height="75dp"
        android:layout_width="150dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:onClick="ChangePassword"
        android:background="@drawable/btn_rules" />      
    
    
    <Button 
        android:id="@+id/edit_profile"
        app:layout_gravity="right"
        android:layout_marginTop = "30dp"
        android:layout_marginRight="20dp"
        android:text="Update&#10;profile"        
        android:layout_height="75dp"
        android:layout_width="150dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:onClick="UpdateProfile"
        android:background="@drawable/btn_rules" />
</android.support.v7.widget.GridLayout>