<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.ibabai.android.proto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="10dp" 
    android:paddingRight="10dp"  
    app:columnCount="2"
    app:orientation="horizontal" >
    
    <TextView         
    	android:textAppearance="?android:attr/textAppearanceLarge"
    	app:layout_columnSpan="2"
    	app:layout_gravity="center"
    	android:textColor="#0000FF"     	    	
    	android:text="Check and confirm your bill"
    	android:layout_height="40dp" />
    

    <TextView         
    	android:textAppearance="?android:attr/textAppearanceLarge"     	    	
    	android:text="Account#"
    	android:layout_height="40dp" />
    	
    <TextView
        android:id="@+id/dialog_account"
        android:textAppearance="?android:attr/textAppearanceLarge" 
        android:text=""
        app:layout_gravity="right"
        android:layout_height = "40dp" />
    
    <TextView         
    	android:textAppearance="?android:attr/textAppearanceLarge"     	    	
    	android:text="Phone#"
    	android:layout_height="40dp"  />
    	
    <TextView
        android:id="@+id/dialog_phone"
        android:textAppearance="?android:attr/textAppearanceLarge" 
        android:text=""
        app:layout_gravity="right"
        android:layout_height = "40dp" />
    
    <TextView         
    	android:textAppearance="?android:attr/textAppearanceLarge"     	    	
    	android:text="Amount" 
    	android:layout_height="40dp" />
    	
    <TextView
        android:id="@+id/dialog_amount"
      	android:textAppearance="?android:attr/textAppearanceLarge" 
        android:text=""
        app:layout_gravity="right"
        android:layout_height = "40dp" />
    
    <TextView         
    	android:textAppearance="?android:attr/textAppearanceLarge"     	    	
    	android:text="Password" 
    	android:layout_height="40dp" />    	
    
    <EditText
        android:id="@+id/dialog_password"
        app:layout_gravity="fill_horizontal"
        android:inputType="textPassword"       
        android:imeOptions="actionDone">
        
        <requestFocus />
    </EditText> 
   
   
</android.support.v7.widget.GridLayout>
